{
  "name": "confess",
  "version": "0.0.1",
  "description": "A configuration wrapper around the configuration manager `convict`",
  "main": "index.js",
  "files": [
    "index.js",
    "lib"
  ],
  "scripts": {
    "jshint": "jshint --reporter node_modules/jshint-stylish/stylish.js index.js lib/**",
    "check-cov": "istanbul check-coverage --statements 100 --functions 100 --branches 100 --lines 100",
    "test": "istanbul cover _mocha",
    "posttest": " npm run check-cov; npm run jshint;",
    "codeclimate": "cat ./coverage/lcov.info | codeclimate"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ksmithut/con-man.git"
  },
  "keywords": [
    "config",
    "convict",
    "configuration"
  ],
  "author": "ksmithut",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ksmithut/con-man/issues"
  },
  "homepage": "https://github.com/ksmithut/con-man",
  "dependencies": {
    "cjson": "^0.3.1",
    "convict": "^0.7.0",
    "minimatch": "^2.0.7",
    "object-assign": "^2.0.0",
    "rc": "^1.0.1"
  },
  "devDependencies": {
    "chai": "^2.3.0",
    "clear-require": "^1.0.1",
    "codeclimate-test-reporter": "0.0.4",
    "istanbul": "^0.3.14",
    "jshint": "^2.7.0",
    "jshint-stylish": "^1.0.2",
    "mocha": "^2.2.4",
    "mocha-lcov-reporter": "0.0.2"
  }
}
